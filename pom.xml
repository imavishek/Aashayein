<!-- 					<version>2.2</version> <configuration> <path>/</path> <contextReloadable>true</contextReloadable>  -->
<!-- 					</configuration>  -->
<!-- 				</plugin> -->
			</plugins>
		</pluginManagement>
	</build>

</project>
